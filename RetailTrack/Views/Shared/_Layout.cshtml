<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - RetailTrack</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/css/output.css" rel="stylesheet" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
      <a class="navbar-brand" asp-controller="Product" asp-action="Index">Productos</a>
      <a class="navbar-brand" asp-controller="Design" asp-action="Index">Diseños</a>
      <a class="navbar-brand" asp-controller="Material" asp-action="Index">Materiales</a>
      <a class="navbar-brand" asp-controller="PurchaseOrder" asp-action="Index">Órdenes</a>
      <a class="navbar-brand" asp-controller="Receipt" asp-action="Index">Facturas</a>
      <a class="navbar-brand" asp-controller="Settings" asp-action="Index">Configuración</a>

      <div class="ms-auto d-flex align-items-center">
        @if (User.Identity.IsAuthenticated)
        {
          <span class="text-white me-3">
            Bienvenido, @User.FindFirstValue(ClaimTypes.Email)
          </span>
          <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
          </form>
        }
        else
        {
          <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
        }
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    @RenderBody()
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>